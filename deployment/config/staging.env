# Staging Environment Configuration
# Project: svc-hackathon-prod07

# Google Cloud Configuration  
GOOGLE_CLOUD_PROJECT=svc-hackathon-prod07
GOOGLE_APPLICATION_CREDENTIALS=/app/config/service-account.json
VERTEX_AI_REGION=us-central1

# AI Provider Configuration
AI_PROVIDER=google_vertex_gemini
VERTEX_AI_PROJECT_ID=svc-hackathon-prod07
VERTEX_AI_LOCATION=us-central1

# Gemini Model Configuration
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=2000
GEMINI_TEMPERATURE=0.1
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Claude Model Configuration (backup)
CLAUDE_MODEL=claude-3-5-sonnet@20241022
CLAUDE_MAX_TOKENS=2000
CLAUDE_TEMPERATURE=0.1

# Application Configuration
ENVIRONMENT=staging
DEBUG=true
LOG_LEVEL=DEBUG
LOG_DIR=/app/logs

# Server Configuration
MCP_SERVER_HOST=0.0.0.0
VIRUSTOTAL_PORT=8001
SERVICENOW_PORT=8002
CYBERREASON_PORT=8003
CUSTOM_REST_PORT=8004
CLOUD_IVX_PORT=8005

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,staging.ai-soar.local
CORS_ORIGINS=["http://localhost:3000", "http://staging.ai-soar.local", "https://*.googleapis.com"]
SSL_VERIFY=false

# Database Configuration
DB_HOST=dev-db
DB_PORT=5432
DB_NAME=ai_soar_staging
DB_USER=soar_user
DB_PASSWORD=staging_password
DB_SSL_MODE=disable

# External API Configuration
# Note: Using test/sandbox endpoints for staging
VIRUSTOTAL_API_KEY_SECRET=projects/svc-hackathon-prod07/secrets/virustotal-api-key-test/versions/latest
SERVICENOW_AUTH_SECRET=projects/svc-hackathon-prod07/secrets/servicenow-auth-test/versions/latest
CYBERREASON_TOKEN_SECRET=projects/svc-hackathon-prod07/secrets/cyberreason-token-test/versions/latest
TRELLIX_API_KEY_SECRET=projects/svc-hackathon-prod07/secrets/trellix-api-key-test/versions/latest

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=true

# Rate Limiting (More lenient for testing)
RATE_LIMIT_REQUESTS_PER_MINUTE=5000
RATE_LIMIT_BURST=500

# Health Check Configuration
HEALTH_CHECK_INTERVAL=15
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=2

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_BUCKET=ai-soar-backups-staging
BACKUP_SCHEDULE="0 4 * * *"  # Daily at 4 AM

# Feature Flags (More permissive for testing)
ENABLE_KAFKA_STREAMING=true
ENABLE_REAL_TIME_ANALYSIS=true  
ENABLE_AUDIT_LOGGING=true
ENABLE_ADVANCED_METRICS=true
ENABLE_DEBUGGING=true