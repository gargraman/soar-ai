# Template Environment Configuration
# Copy this file to .env and update with your values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=svc-hackathon-prod07
GOOGLE_APPLICATION_CREDENTIALS=/home/ubuntu/.config/gcloud/application_default_credentials.json
VERTEX_AI_REGION=us-central1

# AI Provider Configuration
AI_PROVIDER=google_vertex_gemini
VERTEX_AI_PROJECT_ID=svc-hackathon-prod07
VERTEX_AI_LOCATION=us-central1

# Server Configuration
MCP_SERVER_HOST=0.0.0.0
VIRUSTOTAL_PORT=8001
SERVICENOW_PORT=8002
CYBERREASON_PORT=8003
CUSTOM_REST_PORT=8004
CLOUD_IVX_PORT=8005

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,YOUR_VM_EXTERNAL_IP
SSL_VERIFY=true

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_DIR=/var/log/ai-soar

# External API Keys (Replace with your actual keys or use Secret Manager)
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
SERVICENOW_AUTH=your-servicenow-auth-here
CYBERREASON_TOKEN=your-cyberreason-token-here
TRELLIX_API_KEY=your-trellix-api-key-here

# Monitoring Configuration
ENABLE_METRICS=true
PROMETHEUS_ENABLED=true